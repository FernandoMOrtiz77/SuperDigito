@model ML.Result

<div class="container mt-4">

    <h3 class="text-center">SUPER DÍGITO</h3>

    <form method="post" class="mt-3">

        <label>Ingresa un número</label>
        <input type="text" class="form-control" name="numero" required />

        <button type="submit" class="btn btn-primary mt-3 w-100">
            Calcular
        </button>
    </form>

    @if (ViewBag.SuperDigito != null)
    {
        <div class="alert alert-success mt-3 text-center">
            Super Dígito = <strong>@ViewBag.SuperDigito</strong>
        </div>
    }

    <hr />

    <div class="d-flex justify-content-between align-items-center">
        <h4>Historial</h4>

        <a href="@Url.Action("Delete","Numero")"
           class="btn btn-danger"
           onclick="return confirm('¿Seguro que deseas borrar TODO el historial?');">
            Borrar todo el historial
        </a>
    </div>

    @if (Model != null && Model.Objects != null && Model.Objects.Count > 0)
    {
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>Número</th>
                    <th>Super Dígito</th>
                    <th>Fecha</th>
                </tr>
            </thead>

            <tbody>
                @foreach (ML.Numerox n in Model.Objects)
                {
                    <tr>
                        <td>@n.Numero</td>
                        <td>@n.Resultado</td>
                        <td>@n.FechaHora</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-2">
            No hay registros todavía.
        </div>
    }
</div>
