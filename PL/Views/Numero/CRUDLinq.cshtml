@model ML.Result
@{
    ViewBag.Title = "CRUD con LINQ";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold mb-0">Historial Super Dígito</h2>
        </div>

        <a href="@Url.Action("Form", "Numero")" class="btn btn-success">
            + Agregar Número
        </a>
    </div>

    @if (Model?.Objects != null && Model.Objects.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th>Número</th>
                        <th>Resultado</th>
                        <th>Fecha</th>
                        <th style="width: 160px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Numerox item in Model.Objects)
                    {
                        <tr class="text-center">
                            <td>@item.Numero</td>
                            <td class="fw-bold">@item.Resultado</td>
                            <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Numero", new { id = item.IdHistorial })"
                                   class="btn btn-primary btn-sm me-1">
                                    Editar
                                </a>

                                <a href="@Url.Action("Delete", "Numero", new { id = item.IdHistorial })"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('¿Deseas eliminar este registro?');">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay registros aún. Agrega un número para comenzar.
        </div>
    }

</div>
